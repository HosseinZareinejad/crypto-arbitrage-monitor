{
  "__inputs": [
    {
      "name": "DS_PROMETHEUS",
      "label": "Prometheus",
      "description": "",
      "type": "datasource",
      "pluginId": "prometheus",
      "pluginName": "Prometheus"
    }
  ],
  "__requires": [
    { "type": "grafana", "id": "grafana", "name": "Grafana", "version": "9.x" },
    { "type": "datasource", "id": "prometheus", "name": "Prometheus", "version": "1.0.0" },
    { "type": "panel", "id": "timeseries", "name": "Time series", "version": "" },
    { "type": "panel", "id": "stat", "name": "Stat", "version": "" }
  ],
  "templating": {
    "list": [
      {
        "name": "symbol",
        "type": "query",
        "hide": 0,
        "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
        "query": "label_values(last_bid, symbol)",
        "refresh": 2,
        "includeAll": false,
        "multi": true,
        "current": { "selected": true, "text": ["BTC/USDT"], "value": ["BTC/USDT"] }
      },
      {
        "name": "exchange",
        "type": "query",
        "hide": 2,
        "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
        "query": "label_values(last_bid, exchange)",
        "refresh": 2,
        "includeAll": true,
        "multi": true
      }
    ]
  },
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": "-- Grafana --",
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      },
      {
        "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
        "enable": true,
        "hide": false,
        "iconColor": "rgba(255, 96, 96, 1)",
        "name": "Arbitrage Found",
        "type": "query",
        "expr": "sum by (symbol, direction) (increase(opportunities_found_total{symbol=~\"$symbol\"}[1m]))",
        "titleFormat": "Arbitrage Found",
        "textFormat": "{{symbol}} · {{direction}}"
      }
    ]
  },
  "editable": true,
  "graphTooltip": 0,
  "panels": [
    {
      "type": "timeseries",
      "title": "Spread Percentage (5m) — Price Differences",
      "targets": [
        {
          "expr": "last_over_time(last_diff_pct{symbol=~\"$symbol\"}[5m])",
          "legendFormat": "{{symbol}} - {{direction}}",
          "refId": "A",
          "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" }
        }
      ],
      "options": { "legend": { "displayMode": "list", "placement": "bottom" } },
      "fieldConfig": {
        "defaults": { "unit": "percent", "min": -1, "max": 1 },
        "overrides": []
      },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 }
    },
    {
      "type": "timeseries",
      "title": "Last Bid/Ask Prices",
      "targets": [
        {
          "expr": "last_bid{symbol=~\"$symbol\",exchange=~\"$exchange\"}",
          "legendFormat": "{{exchange}} {{symbol}} - Bid",
          "refId": "A",
          "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" }
        },
        {
          "expr": "last_ask{symbol=~\"$symbol\",exchange=~\"$exchange\"}",
          "legendFormat": "{{exchange}} {{symbol}} - Ask",
          "refId": "B",
          "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" }
        }
      ],
      "options": { "legend": { "displayMode": "list", "placement": "bottom" } },
      "fieldConfig": { "defaults": { "unit": "short" }, "overrides": [] },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 }
    },
    {
      "type": "timeseries",
      "title": "HTTP Client Latency p95 by Exchange",
      "targets": [
        {
          "expr": "1000 * histogram_quantile(0.95, sum(rate(http_client_latency_seconds_bucket[5m])) by (le, exchange))",
          "legendFormat": "p95 {{exchange}}",
          "refId": "C",
          "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" }
        }
      ],
      "options": { "legend": { "displayMode": "list", "placement": "bottom" } },
      "fieldConfig": { "defaults": { "unit": "ms" }, "overrides": [] },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 }
    },
    {
      "type": "timeseries",
      "title": "Error Rate (%) (5m)",
      "targets": [
        {
          "expr": "100 * (sum by (exchange) (rate(fetch_errors_total[5m]))) / clamp_min((sum by (exchange) (rate(requests_total[5m]))), 1e-9)",
          "legendFormat": "Error% {{exchange}}",
          "refId": "D",
          "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" }
        }
      ],
      "options": { "legend": { "displayMode": "list", "placement": "bottom" } },
      "fieldConfig": { "defaults": { "unit": "percent" }, "overrides": [] },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 }
    },
    {
      "type": "timeseries",
      "title": "Opportunities Found (30m)",
      "targets": [
        {
          "expr": "sum by (symbol, direction) (increase(opportunities_found_total{symbol=~\"$symbol\"}[30m]))",
          "legendFormat": "{{symbol}} - {{direction}}",
          "refId": "E",
          "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" }
        }
      ],
      "options": { "legend": { "displayMode": "list", "placement": "bottom" } },
      "fieldConfig": { "defaults": { "unit": "short" }, "overrides": [] },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 16 }
    },
    {
      "type": "timeseries",
      "title": "Requests Status (5m)",
      "targets": [
        {
          "expr": "sum by (exchange, outcome) (rate(requests_total{exchange=~\"$exchange\"}[5m]))",
          "legendFormat": "{{exchange}} - {{outcome}}",
          "refId": "F",
          "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" }
        }
      ],
      "options": { "legend": { "displayMode": "list", "placement": "bottom" } },
      "fieldConfig": { "defaults": { "unit": "reqps" }, "overrides": [] },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 16 }
    },
    {
      "type": "stat",
      "title": "Total Arbitrage Alerts",
      "targets": [
        {
          "expr": "sum(alerts_sent_total{symbol=~\"$symbol\"})",
          "legendFormat": "Total Alerts",
          "refId": "G",
          "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" }
        }
      ],
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto",
        "orientation": "auto",
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "textMode": "auto"
      },
      "fieldConfig": { "defaults": { "unit": "short" }, "overrides": [] },
      "gridPos": { "h": 8, "w": 6, "x": 0, "y": 24 }
    },
    {
      "type": "timeseries",
      "title": "Opportunities Discovery Rate (5m)",
      "targets": [
        {
          "expr": "rate(opportunities_found_total{symbol=~\"$symbol\"}[5m])",
          "legendFormat": "{{symbol}} - {{direction}}",
          "refId": "H",
          "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" }
        }
      ],
      "options": { "legend": { "displayMode": "list", "placement": "bottom" } },
      "fieldConfig": { "defaults": { "unit": "short" }, "overrides": [] },
      "gridPos": { "h": 8, "w": 18, "x": 6, "y": 24 }
    }
  ],
  "refresh": "5s",
  "schemaVersion": 38,
  "style": "dark",
  "tags": ["arbitrage", "monitoring"],
  "timezone": "",
  "title": "Arbitrage Monitoring Dashboard",
  "version": 6,
  "weekStart": "",
  "time": { "from": "now-1h", "to": "now" }
}